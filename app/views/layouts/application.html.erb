<!DOCTYPE html>
<html>
  <head>
    <title>ConduitApi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all'%>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= react_component "navigation/Navbarout", {name: @current_user.name, id: @current_user.id} %>
    <% else %>
      <%= react_component "navigation/Navbarin" %>
    <% end %>
    <%= yield %>
  </body>
</html>
